<%= form_for @character do |c| %>
    <%= c.label :name %>
    <%= c.text_field :name %>
    <br>
    <%= c.label :level %>
    <%= c.number_field :level %>
    <br> <br>
    <% if !@character.race_id %>
        <h4>Select a Race from the below factions:</h4>
        <% Race.pluck(:faction).uniq.each do |f| %>
            <u><%= c.label f %></u> <br>
            <%= c.collection_radio_buttons(:race_id, Race.where(faction: f), :id, :name) %> <br><br>
        <% end %>
    <% else %>
        <%= c.hidden_field :race_id %>
    <% end %>

    <% if !@character.career_id %>
        <h4>Select a Career:</h4>
        <%= c.collection_radio_buttons :career_id, Career.all, :id, :name %>
    <% else %>
            <%= c.hidden_field :career_id %>
    <% end %>
    <br>
    <%= c.submit %>
<% end %>