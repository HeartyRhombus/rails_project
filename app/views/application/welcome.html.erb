<% if user_signed_in? %>
    <h1 style="text-align: center">Welcome to Your<br>World of Warcraft Character Tracker!</h1>
<% else %>
    <h1 style="text-align: center">Welcome to the<br>World of Warcraft Character Tracker!</h1>
    <br>
    <i>Please login or sign up to view and/or add characters,<br>or feel free to browse available races and careers!</i>
<% end %>


<% if user_signed_in? %>
<%= random_career %>
<br><br>
    Filter by faction:
    <%= form_tag("/characters", method: "get") do %>
        <%= select_tag "faction", options_for_select(faction_list), include_blank: true %>
        <%= submit_tag "Filter" %>
    <% end %>
    <br><br>


<% end %>

<%= render '/characters/home' %>

<% if current_user %>
    <%= link_to 'Add Character', new_character_path, class: "btn btn-outline-info" %>
<% end %>